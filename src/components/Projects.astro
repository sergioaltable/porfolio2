<section id="projects" class="py-24 bg-gray-light dark:bg-gray-800/20">
  <div class="max-w-prose mx-auto px-6">
    <div class="space-y-16 fade-in">
      <div class="space-y-8">
        <h2 class="text-3xl font-medium">Featured Projects</h2>
        <p class="text-body text-secondary dark:text-gray-400">
          A selection of projects that showcase my expertise in different technologies and domains.
        </p>
      </div>

      <div class="space-y-8 stagger">
        {projects.map(project => (
          <a href={project.link} class="block group">
            <article class="p-8 bg-white dark:bg-gray-800/50 rounded-lg hover-lift">
